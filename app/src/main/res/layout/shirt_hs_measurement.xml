<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/pant_measurement">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="19"
        android:rowCount="6"
        android:layout_margin="40dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_backpocket"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Back Pocket" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_waist"
            android:layout_row="1"
            android:layout_column="1"
            android:hint="Waist" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_beltloop"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="Belt Loop" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_pleat"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="Pleat" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/create_shirt_hs"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_vertical" />

    </GridLayout>
</LinearLayout>