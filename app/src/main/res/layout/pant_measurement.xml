        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Save"-->
        <!--android:id="@+id/create_pant"-->
        <!--android:layout_gravity="center_vertical" />-->
</LinearLayout>